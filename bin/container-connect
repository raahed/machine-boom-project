#!/bin/bash
DIR=$(dirname `realpath -s "$0"`)

if [ ! "$(docker ps -a | grep mbp-runner)" ]; then
  echo "Project container is not running!"; exit 1
fi

docker exec --interactive \
            --tty \
            --privileged \
            --env-file $DIR/../.env \
            --user root \
            $@ \
            mbp-runner bash