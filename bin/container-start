#!/bin/bash
dir=$(dirname `realpath -s "$0"`)

docker run --detach \
           --rm \
           --privileged \
           --user root \
           --publish 2059:5900 \
           --publish 2022:22 \
           --publish 2088:8888 \
           --env-file $dir/../.env \
           --env USER=root \
           --volume $dir/../src:/mnt/project \
           --name mbp-runner \
           machine-boom-project:latest
