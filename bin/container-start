#!/bin/bash
dir=$(dirname `realpath -s "$0"`)

docker run --detach \
           --rm \
           --privileged \
           --user root \
           --publish 5900:2059 \
           --publish 22:2022 \
           --publish 8888:2088 \
           --env-file ../.env \
           --env USER=root \
           --volume $dir/src:/mnt/project \
           --name mbp-runner \
           machine-boom-project:latest