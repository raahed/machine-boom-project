#!/bin/bash
SOURCE=$(dirname `pwd`)/src

docker run --detach \
           --rm \
           --privileged \
           --user root \
           --publish 5900:2059 \
           --publish 22:2022 \
           --env-file ../.env \
           --env USER=root \
           --volume $SOURCE:/mnt/project \
           --name mbp-runner \
           machine-boom-project:latest