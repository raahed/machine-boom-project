#!/bin/bash
dir=$(dirname `realpath -s "$0"`)

docker run -ti \
           --rm \
           --privileged \
           --user root \
	       --net=host \
           --volume=/tmp/.X11-unix:/tmp/.X11-unix:rw \
           --volume=$HOME/.Xauthority:/root/.Xauthority:rw \
           --env DISPLAY=$DISPLAY \
           --env-file $dir/../.env \
           --env USER=root \
           --volume $dir/../src:/mnt/project \
           --name mbp-runner \
           $@ \
           machine-boom-project:latest

